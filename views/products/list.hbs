<section class="lista">

    {{#each products}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{this.photos.[0]}}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{this.name}} - {{this.user.username}}</h5>
            <p class="card-text">{{this.desc}}</p>
            <a href="/products/{{this._id}}" class="btn btn-primary">{{this.price}}</a>
        </div>
        </div>
    {{/each}}

</section>